<h1>ユーザー名：<%= @user.last_name %> <%= @user.first_name %> 様</h1>
<h3>メールアドレス：<%= @user.email %></h3>
<h3>電話番号：<%= @user.phone_number %></h3>
<h3>郵便番号：<%= @user.zip_code %></h3>
<h3>住所：<%= @user.address %></h3>

<h2>購入履歴</h2>
<% @orders.each do |order| %>
ーーーーーーーーーーーーーーーーー
	<h2>購入日：<%= order.updated_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[order.updated_at.wday]})")  %></h2>
	<h2>合計金額：<%= order.total_price %>円</h2>
	<h2><%= link_to "購入情報の詳細へ", order_path(order) %></h2>
<% end %><br>
<% if user_signed_in? %>
	<p><%= link_to "ユーザー情報の変更", edit_user_registration_path %></p>
	<p><%= link_to "退会する", user_registration_path, method: :delete, data: { confirm: "本当に退会しますか？" } %><p>
<% elsif admin_signed_in? %>
	<p><%= link_to "このユーザーの情報を編集する", user_edit_path(@user, user_id: @user.id), method: :post %></p>
	<p><%= link_to "このユーザーを削除する", user_destroy_path(@user, user_id: @user.id), method: :delete, data: { confirm: "このユーザーを削除しますか？" }%></p>
<% end %>