<h1>ショッピングカート</h1>
	<table>
		<thead>
			<tr>
				<th>商品名</th>
				<th>個数</th>
				<th>商品価格</th>
				<th>アーティスト名</th>
				<th>商品合計</th>
			</tr>
		</thead>
		<tbody>
				<tr>

					<% if @cart_item.count == 1 %>
						<%= attachment_image_tag @cart_item.first.item, :item_image, :fill, 100, 100, format: 'jpeg' %>
						<td><%= @cart_item.first.item.item_name %></td>
						<td><%= @cart_item.first.count %></td>
						<td><%= @cart_item.first.item.price %></td>
						<td><%= @cart_item.first.item.artist_name %></td>


					<% else %>
					<% binding.pry %>
						<%= @cart_items.each do |cart_item| %>
							<td><%= cart_item.item.item_name %></td>
							<td><%= cart_item.count %>個
							
						<% end %>
					<% end %>

				</tr>
			
		</tbody>
	</table>
		<p>合計金額</p>