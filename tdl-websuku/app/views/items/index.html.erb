<% provide(:title, "商品一覧") %>


<body>
<%= search_form_for @search do |f| %>
  <div class="form-group col-md-6">
    <%= f.label :item_name_cont, "商品検索" %>
    <%= f.text_field :item_name_cont, class: "form-control" %>
  </div>
  <div class="actions"><%= f.submit "Search", class: "btn btn-success" %></div>
　<% end %>
 
  <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h5 class="display-4">商品一覧</h5>
    <p class="lead">いっぱいかってね！</p>
  </div>
          
          <% @items.each do |item| %>
      
          
        <div class="fpx-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
          
          <div class="card col-md-12">
              <div class="card-header">
                <h6 class="my-0 font-weight-normal"><%= link_to item.item_name, item_path(item) %></h6>
              </div>

              <div class="card-body">
                <ul class="list-unstyled mt-3 mb-4">
                  <li>¥<%= item.price %></li>
                  <li><%= item.artist_name %></li>
                  <li><%= attachment_image_tag item, :item_image, :fill, 100, 100, format: 'jpeg' %></li>
                  <li><%= item.category %></li>
                  <li><%= item.label %></li>
                  <% if item.stock == 0 %>
                  <li>売り切れ！</li>
                  <% else %>
                  <li><%= item.stock %></li>
<!--                   <#% end %>
 -->                </ul>
              </div>
          </div>
      
      </div>
      <% end %>  
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <br>
        <% if admin_signed_in? %>
          <td><%= link_to 'New Item', new_item_path %></td>
        <% end %>
</body>