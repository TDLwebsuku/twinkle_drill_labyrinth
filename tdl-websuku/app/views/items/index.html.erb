<% provide(:title, "商品一覧") %>
<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Price</th>
      <th>Artist name</th>
      <th>Item image</th>
      <th>Category</th>
      <th>Label</th>
      <th>Admin</th>
      <th>Stock</th>
      <th>Is available</th>
      <th>Delete flag</th>
      <th>Is purchased</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.item_name, item_path(item) %></td>
        <td><%= item.price %></td>
        <td><%= item.artist_name %></td>
        <td><%= attachment_image_tag item, :item_image, :fill, 100, 100, format: 'jpeg' %></td>
        <td><%= item.category %></td>
        <td><%= item.label %></td>
        <td><%= item.admin_id %></td>
        <td><%= item.stock %></td>
        <td><%= item.is_available %></td>
        <td><%= item.delete_flag %></td>
        <td><%= item.is_purchased %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if admin_signed_in? %>
  <%= link_to 'New Item', new_item_path %>
<% end %>
