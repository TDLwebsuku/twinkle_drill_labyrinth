        <%= form_with(model: item, local: true, class: "form-horizontal") do |f| %>
          <div class="form-striped">
            <div class="control-group">
              <label class="control-label">
                <span class="label-ttl">商品名</span>
              </label>
              <div class="controls">
                <%= f.text_field :item_name, id: :item_item_name %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">
                <span class="label-ttl">金額</span>
              </label>
              <div class="controls">
                <%= f.number_field :price, id: :item_price %>円
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">
                <span class="label-ttl">アーティスト名</span>
              </label>
              <div class="controls">
                <%= f.text_field :artist_name, id: :item_artist_name %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-labels">
                <span class="label-ttl">画像</span>
              </label>
              <div class="controls">
                <%= f.attachment_field :item_image %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-labels">
                <span class="label-ttl">カテゴリ</span>
              </label>
              <div class="controls">
                <%= f.select :category, Item.categories.keys.to_a %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-labels">
                <span class="label-ttl">レーベル</span>
              </label>
              <div class="controls">
                <%= f.text_field :label, id: :item_label %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-labels">
                <span class="label-ttl">ジャンル</span>
              </label>
              <div class="controls">
                <%= f.select :genres, Item.genres.keys.to_a %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-labels">
                <span class="label-ttl">トラックリスト</span>
              </label>
              <div class="controls">
                <%= f.fields_for :track_lists do |track_list| %>
                  <%= render 'track_list_fields', f: track_list %>
                <% end %>
                <%= link_to_add_association '追加', f, :track_lists, data: { association_insertion_method: 'before' } %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-labels">
                <span class="label-ttl">在庫数</span>
              </label>
              <div class="controls">
                <%= f.number_field :stock, id: :item_stock %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-labels">
                <span class="label-ttl">購入可不可</span>
              </label>
              <div class="controls">
                <%= f.select :is_available, Item.is_availables.keys.to_a %>
              </div>
            </div>
            <%= f.hidden_field :admin_id, :value => current_admin.id %>
          </div>
          <div class="form-actions">
            <div>
              <%= f.submit "商品登録", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>